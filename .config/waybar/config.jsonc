// ~/.config/waybar/config
{
    // General bar settings
    "layer": "bottom",
    "position": "left",
    "spacing": 3,
    "width": 10,
    "margin-top": 0,
    "margin-bottom": 0,
    "margin-left": -2,
    "margin-right": 0,
    "fixed-center": true,
    "modules-order": ["modules-left", "modules-center", "modules-right"],

    // Modules that will appear at the top of the vertical bar
    "modules-left": [
        "battery",
        "pulseaudio",
        "backlight",
        "memory",
        "cpu",
        "temperature"
    ],

    // Modules that will appear in the center of the vertical bar
    "modules-center": [
        "hyprland/workspaces"
    ],

    // Modules that will appear at thebottom of the vertical bar
    "modules-right": [
       // "tray", //uncomment this to enable tray
        "custom/network-upload",
        "custom/network-unit",
		    "custom/network-download",
        "custom/inhibit-suspend",
        "custom/notification",
        "clock",
        "custom/power"
    ],

    // Module specific configurations


    "temperature": {
        "thermal-zone":"/sys/class/thermal/thermal_zone6/type:x86_pkg_temp",
        "hwmon-path-abs": null,
        "critical-threshold": 65,
        "format-critical": "üî•\n{temperatureC}",
        "format": "Ôãâ¬∞\n{temperatureC}",
        "interval":2,
        "tooltip-format": "Package: {temperatureC}"
},


"battery": {
    "format": "ÔÉß\n{capacity}\n{power:.1f}",       // This is the default, used for "discharging"
    "format-charging": "ÔÉß\n{capacity}\n{power:.0f}", // Explicitly show power when charging
    "format-plugged": "ÔÉß\n{capacity}",          // When plugged in and full, show a hyphen
    "interval": 5,
    "states": {
        "warning": 30,
        "critical": 15
    },
    "tooltip-format": "{timeTo}\nÛ±ü¶ Health {health}%"
},

  "pulseaudio":{
        "format": "{icon}\n{volume}",
        "format-muted": "Û∞ñÅ\nX",
        "on-click": "pavucontrol",
        "on-click-right": "playerctl play-pause",
        "format-icons": ["Û∞ñÅ", "ÔÄß", "ÔÄ®"],
        "tooltip": true,
        "tooltip-format": "Volume: {volume}%\n{desc}"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}\n{percent}",
        "format-icons": [
										      "Óéç",
										      "Óèî",
										      "Óèì",
										      "Óèí",
										      "Óèë",
										      "Óèê",
										      "Óèè",
										      "Óèé",
										      "Óèç",
										      "Óèå",
										      "Óèã",
										      "Óèä",
										      "Óèâ",
										      "Óèà",
										      "Óéõ"
										    ],
        "tooltip": true,
        "tooltip-format": "Brightness: {percent}%\nLMB: Brightness -1%\nRMB: Brightness +1%",
        "on-click": "brightnessctl set 1%-",
        "on-click-right": "brightnessctl set 1%+",
        "on-click-middle": "~/user_scripts/waybar/hyprsunsetoff.sh",
        "on-scroll-up": "~/user_scripts/waybar/hyprsunset1500.sh",
        "on-scroll-down": "~/user_scripts/waybar/hyprsunset3500.sh",
        "min-length": 4,
        "interval": 60
    },
		
    "cpu": {
        "format": "Ó∞ô\n{usage}",
        "tooltip": true,
        "on-click": "sh -c 'kitty btop'",
        "tooltip-format": "CPU: {usage}%\nAvg Freq: {avg_frequency}GHz",
        "interval": 2
    },

    "memory": {
        "format": "ÔÇÄ\n{percentage}",
        "interval": 2,
        "states": {
            "critical": 80
		},
		"tooltip": true,
 		"tooltip-format":"Used {used} GiB\nAvail {avail} Gib\nSwap {swapUsed} GiB"
 	},
        
    "hyprland/workspaces": {
        "all-outputs": true,
        "sort-by-number": true
    },

    "tray": {
        "icon-size": 18,
        "show-passive-items": true,
        "spacing": 3, 
        "rotate": 90
    },
     
"custom/network-unit": {
  "return-type": "json",
  "tooltip": true,
  "interval": 1,
  "exec": "$HOME/user_scripts/waybar/network/network_meter_calling.sh unit"
},

"custom/network-upload": {
  "return-type": "json",
  "tooltip": true,
  "interval": 1,
  "exec": "$HOME/user_scripts/waybar/network/network_meter_calling.sh up"
},

"custom/network-download": {
  "return-type": "json",
  "tooltip": true,
  "interval": 1,
  "exec": "$HOME/user_scripts/waybar/network/network_meter_calling.sh down"
},

"clock": {
    "format": "{:%I\n%M}",
    "tooltip-format": "<big>{:%A, %d %B}</big>\n<tt><small>{calendar}</small></tt>",
    "timezone": "Asia/Kolkata",
    "interval": 60,
    "on-click": "gnome-clocks",
    "calendar": {
        "mode": "year",
        "mode-mon-col": 3,
        "weeks-pos": "right",
        "on-scroll": 1,
        "on-click-right": "mode",
        "format": {
            "months": "<span color='#ffead3'><b>{}</b></span>",
            "days": "<span color='#ecc6d9'><b>{}</b></span>",
            "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
            "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
            "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
        }
    },
    "actions": {
        "on-click-right": "mode",
        "on-scroll-up": "shift_up",
        "on-scroll-down": "shift_down"
    }
},

    "custom/notification": {
        "tooltip-format": "Left: Notifications\nRight: Do not disturb",
        "format": "{icon}",
        "format-icons": {
            "notification": "<span rise='8pt'>ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "<span rise='8pt'>ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "<span rise='8pt'>ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "<span rise='8pt'>Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },

"custom/inhibit-suspend": {
    "format": "{}",
    "exec": "if pgrep -x 'hypridle' > /dev/null; then echo '{\"text\": \"ÔàÖ\", \"tooltip\": \"Suspend is enabled. Click to disable.\", \"class\": \"enabled\"}'; else echo '{\"text\": \"ÔàÑ\", \"tooltip\": \"Suspend is disabled. Click to enable.\", \"class\": \"disabled\"}'; fi",
    "interval": 5,
    "return-type": "json",
    "on-click": "~/user_scripts/waybar/toggle_hypridle.sh",
    "escape": true
}, 

    "custom/power": {
        "format": "ÔÄë",
        "tooltip": true,
        "tooltip-format": "Power Menu",
        "on-click": "wlogout"
    }
}
